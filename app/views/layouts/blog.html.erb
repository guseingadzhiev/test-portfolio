<!DOCTYPE html>
<html>
  <head>
    <title><%=@page_title%></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/css?family=VT323|Vollkorn&display=swap" rel="stylesheet">

    <meta name= "keywords" content="<%= @seo_keywords %>"/>
    <%= favicon_link_tag 'favicons/favicon.ico' %>
    <%= stylesheet_link_tag    'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>  

    <%=render "shared/blog_nav"%>
    <%=render "shared/blog_masthead"%>

    <main role="main" class="container">

      <div class="row">

        <%= yield %>

        <%= render 'shared/blog_sidebar' %>  

      </div> 

      <%= render 'shared/blog_footer' %>

      <%= alerts %>     
    </main>

  </body>

</html>
